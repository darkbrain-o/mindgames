

{% block body %}
<h1>Liste des jeux</h1>

<div class="container" style="width:80%; margin: 0 auto">

    <a href="{{ path('add_game') }}">Ajouter un jeu</a>
    
        <table border="1">
            <thead>
                    
                <tr>
                    <th>ID</th>
                    <th>Image</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Retro</th>
                    <th>Stock</th>
                    <th>Prix</th>
                    <th>Plate Forme</th>
                    <th>Pegi</th>
                    <th>Statut</th>
                    <th>Date création</th>
                    <th colspan="3">Actions</th>
                </tr>
            </thead>
            
            <tbody>
                    {% for game in game %}
                <tr>
                        
                    <td>{{ game.id }}</td>
                    <td><img src="{{ asset(game.picture) }}" alt="" class="img-responsive" width="200" height="200"></td>
                    <td>{{ game.name }}</td>
                    <td>{% set string = game.description %}
                        {{ string|striptags|slice(0, 20)|raw }}
                        <a href="{{ game.description }}">...</a></td>
                    <td>{{ game.RetroShape }}</td>
                    <td>{{ game.stock }}</td>
                    <td>{{ game.price }}</td>
                    <td>{{ game.platform }}</td>
                    <td>{{ game.pegi }}</td>
                    <td>{{ game.status }}</td>
                    <td>{{ game.CreationDate|date('d/m/Y') }}</td>
                    <td> <a class="btn btn-danger" href="{{ path('details_game', {'id' : game.id }) }}"><i class="fa fa-info"></i></a></td>
                    <td> <a class="btn btn-danger" href="{{ path('edit_game', {'id' : game.id }) }}"><i class="fa fa-edit"></i></a></td>
                    <td> <a type="submit" value="Delete post" class="btn btn-lg btn-block btn-danger" href="{{ path('delete_game', {'id' : game.id }) }}"  onclick="confirm('Valider la suppression ?') || event.preventDefault()"><i class="fa fa-trash"></i></a></td>


                </tr>
            </tbody>          
            {% endfor %}
        </table>

            <div class="col-1 bg-success"> 
            
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn btn-danger" href="{{ path('edit_game', {'id' : game.id }) }}">Modifier</a>
                {% endif %}
            </div>

            <div class="col-1">

                {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn btn-danger" href="{{ path('delete_game', {'id' : game.id }) }}">Supprimer</a>
                {% endif %}
            </div>
    <hr>
</div>

{% endblock %}

