{% extends 'base_admin.html.twig' %}

{% block title %}Liste des Commandes{% endblock %}

{% block body %}

    {% include "includes/nav_admin.html.twig" %}

    <div class="container">
        <div class="row" >
            <div class="col-10 row">
                <div class="col-10">
                    <table border="2" id="center">
                        <thead>
                        <tr class="text-center">
                            <th>ID</th>
                            <th>ID User</th>
                            <th>Date Commande</th>
                            <th>Statut</th>
                            <th>Role</th>
                            <th colspan="3">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for command in command %}
                        <tr class="text-center">
                            <td>{{ command.id }}</td>
                            <td>{{ command.user.id }}</td>
                            <td>{{ command.CommandDate|date('d/m/Y') }}</td>
                            <td>{{ command.status }}</td>
                            <td>Initialiser RÃ´le</td>
                            <td><a class="btn btn-info" href="{{ path('details_command', {'id' : command.id }) }}"><i class="fa fa-info"></i></a></td>
                            <td><a class="btn btn-info" href="{{ path('edit_command', {'id' : command.id }) }}"><i class="fa fa-edit"></i></a></td>
                            <td><a class="btn btn-danger" href="{{ path('delete_command', {'id' : command.id }) }}", onclick="confirm('Valider la suppression ?') || event.preventDefault()"><i class="fa fa-trash"></i></a></td>
                            {#<td><a class="btn btn-danger" href="{{ path('delete_command', {'id' : command.id }) }}"><i class="fa fa-trash"></i></a></td>#}
                        </tr>
                        </tbody>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
        <hr>
    </div>
{% endblock %}

