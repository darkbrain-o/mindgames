{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="checkbox mb-3">You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
    {% endif %}
        {# <a href="{{ path('home') }}" >Home</a> #}

        <div class="container">

        {{ form_start(login_form)}}
    <form>
        <div class="col-xl-5 mx-auto">
            <div class="text-center">
                <h3 class="white-text">
                    <i class="fa fa-user white-text icon-md">  Connexion</i>
                </h3>
                <hr class="hr-light">
            </div>
            <div class="form-group">
            <i class="fa fa-user icon"></i>
                    {{ form_label(login_form._username) }}
                    {{ form_widget(login_form._username, {attr : { name:"_username", class: 'white-text form-control'} }) }}
                {# <label for="formPseudo" class="active"><i class="fa fa-user icon"> Pseudo</i></label>
                <input type="text" id="formPseudo" class="white-text form-control"> #}
            </div>
            <div class="form-group">
            <i class="fa fa-lock icon"></i>
                    {{ form_label(login_form._password) }}
                    {{ form_widget(login_form._password, {attr : {name:"_password",  class: 'white-text form-control'} }) }}
                
                {# <label for="formPassword"><i class="fa fa-lock icon">  Mot de Passe</i></label>
                <input type="password" id="formPassword" class="white-text form-control"> #}
            </div>
                    {{ form_label(login_form.submit) }}
                    {{ form_widget(login_form.submit, {attr : { class: 'btn-success form-control'} }) }}
            {# <a class="btn btn-primary" id="primary" href="{{ path('home.html.twig') }}">Valider</a> 
             <a class="btn btn-secondary" id="secondary" href="signup.html.twig">S'inscrire</a> #}
        
            <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
        </div>
    </form>
    {{ form_end(login_form)}}
</div>

    {# <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputPseudo" class="sr-only">Pseudo</label>
    <input type="text" value="{{ last_username }}" name="pseudo" id="inputPseudo" class="form-control" placeholder="Pseudo" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>

     #}

