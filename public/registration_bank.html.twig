{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

{% include "includes/nav_user.html.twig" %}

<div class="container">
    <form>
        <div class="form-row">
            <div class="text-center col-md-10">
                <h3 class="white-text">
                    <i class="fa fa-cc-paypal white-text icon-md">  Informations bancaires</i>
                </h3>
                <hr class="hr-light">
            </div>
            <div class="form-group col-md-2">
                <a href="registration_bienvenue.html.twig" class="btn btn-secondary" id="Pass">Passer cette étape</a>

            </div>
            <div class="form-group col-md-6">
                <label for="formLastName" class="active"><i class="fa fa-address-book icon"> Nom</i></label>
                <input type="text" id="formLastName" class="white-text form-control">
            </div>
            <div class="form-group col-md-6">
                <label for="formFirstName" class="active"><i class="fa fa-address-book icon"> Prénom</i></label>
                <input type="text" id="formFirstName" class="white-text form-control">
            </div>
            <div class="form-group col-md-12">
                <label for="formAddress" class="active"><i class="fa fa-id-card icon"> Adresse</i></label>
                <input type="text" id="formAddress" class="white-text form-control">
            </div>
            <div class="form-group col-md-3">
                <label for="formPostalCode" class="active"><i class="fa fa-envelope icon"> Code postal</i></label>
                <input type="text" id="formPostalCode" class="white-text form-control">
            </div>
            <div class="form-group col-md-9">
                <label for="formCity" class="active"><i class="fa fa-envelope-open icon"> Ville</i></label>
                <input type="text" id="formCity" class="white-text form-control">
            </div>
            <div class="form-group col-md-2">
                <i class="far fa-calendar-alt"></i>
                <label for="formBirthday" class="active"><i class="fa fa-calendar icon"> Né le</i></label>
                <input type="date" id="formBirthday" class="white-date form-control">
            </div>
            <div class="form-group col-md-10">
            </div>
            <div class="form-group col-md-8">
                <label for="formNbCard" class="active"><i class="fa fa-credit-card icon"> Numéro de carte</i></label>
                <input type="number" id="formNbCard" class="white-text form-control">
            </div>
            <div class="form-group col-md-2">
                <label for="formDateExp" class="active"><i class="fa fa-bell-slash icon">  Expire le</i></label>
                <input type="date" format="MM/yyyy" id="formDateExp" class="white-date form-control">
            </div>
            <div class="form-group col-md-2">
                <label for="formCrypto"><i class="fa fa-book icon">  Cryptogramme</i></label>
                <input type="text" id="formCrypto" class="white-text form-control">
            </div>
            <a class="btn btn-primary" id="submit" href="registration_bienvenue.html.twig">Valider</a>
        </div>
    </form>
    <br>
    <p> Penser à modifier le format MM/YY pour la date d'expiration</p>

    <div class="row" >
        <div class="mx-auto">
            <span class="badge badge-pill badge-info">2</span>
        </div>
    </div>

</div>


{% endblock %}